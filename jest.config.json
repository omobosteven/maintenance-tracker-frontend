{
  "setupFiles": [
    "raf/polyfill",
    "<rootDir>/src/tests/setupTest.js"
  ],
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!**/node_modules/**",
    "!**/src/index.js",
    "!**/src/utils/**",
    "!**/src/store/index.js",
    "!**/index.js"
  ],
  "moduleNameMapper": {
    "\\.(gif|ttf|eot|svg|png|jpg|jpeg|css|sass|scss)$": "<rootDir>./src/tests/__mocks__/fileMock.js"
  }
}
